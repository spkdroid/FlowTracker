<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HubFragment" tools:layout_editor_absoluteY="81dp">

    <ImageView
            android:src="@drawable/hub_calendar_icon"
            android:layout_width="51dp"
            android:layout_height="38dp"
            android:id="@+id/hubCalendar"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="25dp"/>

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:layout_width="200dp"
            android:layout_height="0dp"
            app:cpb_background_progressbar_color="#FFCDD2"
            app:cpb_background_progressbar_width="5dp"
            app:cpb_progressbar_color="#F44336"
            app:cpb_progressbar_width="25dp"
            android:id="@+id/circularProgressBar"
            app:layout_constraintTop_toBottomOf="@+id/titledays" android:layout_marginBottom="206dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:text="11"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/dayscount"
            android:textSize="108sp" android:textStyle="bold" android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginTop="132dp" android:layout_marginBottom="12dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/logperiod"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Current Day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titledays"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/hubCalendar"
            android:layout_marginEnd="190dp" android:layout_marginTop="56dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toTopOf="@+id/circularProgressBar"/>
    <Button
            android:text="Log Period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logperiod"
            style="@style/Widget.AppCompat.Button.Small"
            android:textColor="@android:color/holo_red_dark" android:backgroundTint="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/dayscount"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/message"/>
    <TextView
            android:text="Message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/message"
            android:textStyle="bold" android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="@+id/messagecontent"
            android:layout_marginStart="1dp" app:layout_constraintTop_toBottomOf="@+id/logperiod"
            android:layout_marginBottom="5dp" app:layout_constraintBottom_toTopOf="@+id/messagecontent"/>
    <TextView
            android:layout_width="233dp"
            android:layout_height="0dp"
            android:id="@+id/messagecontent"
            android:textStyle="bold" android:textColor="@android:color/black"
            android:text="Ovulation Period"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="55dp" app:layout_constraintTop_toBottomOf="@+id/message"
            android:layout_marginBottom="56dp" app:layout_constraintBottom_toTopOf="@+id/rovbotdroid"/>
    <ImageView
            android:src="@drawable/ldroid"
            android:layout_width="51dp"
            android:layout_height="0dp"
            android:id="@+id/rovbotdroid"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/messagecontent" android:layout_marginBottom="25dp"/>
    <ImageView
            android:src="@drawable/notebook"
            android:layout_width="51dp"
            android:layout_height="42dp"
            android:id="@+id/logbutton" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="317dp"
            android:layout_marginBottom="7dp" app:layout_constraintBottom_toTopOf="@+id/rovbotdroid"
            android:layout_marginTop="118dp" app:layout_constraintTop_toBottomOf="@+id/dayscount"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="1.0"/>
</android.support.constraint.ConstraintLayout>